---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
import Button from "./Button.astro";
---

<section class="hero">
  <div class="hero-content">
    <div>
      <h1>Empowering Your Business Growth</h1>
      <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
      <Button txt="Book a Meeting" link="#0" btnColor="#FFF" txtColor="var(--bg-color-black)" />
    </div>
  </div>
  <Image src={CEOImage} alt="CEO" />

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      background-color: var(--bg-color-white);
      display: grid;
      grid-template-columns: 1fr minmax(0, 600px) minmax(0, 600px) 1fr;
      grid-template-rows: 1fr 1fr minmax(0px, 1fr);

      img {
        grid-column: 3 / -1;
        grid-row: 1 / 3;
      }

      > *:has(li) {
        grid-column: 2 / 4;
        grid-row: 2 / 4;
        justify-content: center;
        align-items: center;
      }

      .hero-content {
        background-color: var(--bg-color-black);
        grid-column: 1 / 3;
        grid-row: 1 / 3;
        display: grid;
        grid-template-columns: subgrid;

        > * {
          grid-column: 2 / 3;
          grid-row: 1 / 2;
          align-content: center;
        }

        h1 {
          color: #fff;
          font-family: Cabin;
          font-size: var(--size-4);
          font-style: normal;
          font-weight: 700;
          line-height: 116%; /* 58px */
        }

        p {
          color: #fff;
          font-size: var(--size-0);
        }
      }
    }
  }
</style>
