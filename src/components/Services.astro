---
//@ts-nocheck
import servicesData from "@data/services.json";
import Button from "./Button.astro";
console.log(servicesData);
---

<ul class="services">
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <Button txt={service.buttonText} link="#0" btnColor="#151515" txtColor="#FFF" brdRadius="52px" />
      </li>
    ))
  }
</ul>

<style>
  ul {
    padding-inline-start: 0px;
  }
  @layer components {
    li {
      list-style: none;
      padding: 46px;
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(16px);
      color: #fff;
      display: grid;
      grid-row: 1 / -1;
      grid-template-rows: subgrid;
      place-self: center;

      > a {
        width: min-content;
      }

      h2 {
        font-family: Cabin;
        font-size: var(--size-2);
        font-style: normal;
        font-weight: 600;
        text-wrap: nowrap;
      }
    }
  }
</style>
